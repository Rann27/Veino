# Contoh .env setelah diedit untuk hosting

APP_NAME="VeiNovel"
APP_ENV=production
APP_KEY=base64:GENERATE_DENGAN_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database sesuai hosting
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=username_veinovel  # Format biasanya: cpanelusername_dbname
DB_USERNAME=username_dbuser    # Sesuai yang dibuat di cPanel
DB_PASSWORD=your_db_password

# Session Security
SESSION_DRIVER=database
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# Email via hosting SMTP
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="VeiNovel"
